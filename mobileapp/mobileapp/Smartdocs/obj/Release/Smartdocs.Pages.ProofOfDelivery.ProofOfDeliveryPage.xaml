<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Smartdocs.ProofOfDeliveryPage">
	<StackLayout>
		<StackLayout HeightRequest="37" BackgroundColor="White" Orientation="Horizontal" VerticalOptions="Center" Padding="10, 30, 10, 10">
			<Image Source="toggle_menu.png" HorizontalOptions="Start" VerticalOptions="Center" HeightRequest="18" WidthRequest="18"></Image>
			<StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
				<Label HorizontalOptions="CenterAndExpand" VerticalOptions="Center" FontSize="18" Text="SmartDocs" TextColor="Black"></Label>
			</StackLayout>
			<Image HorizontalOptions="End" VerticalOptions="Center" Source="search.png" WidthRequest="18" HeightRequest="18">
			</Image>
		</StackLayout>
		<StackLayout BackgroundColor="#f2f9fc" VerticalOptions="FillAndExpand"></StackLayout>
	</StackLayout>
</ContentPage>
